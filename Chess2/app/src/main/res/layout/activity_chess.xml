<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201810"
    tools:context=".ChessActivity">

    <TextView
        android:id="@+id/chessTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chess Game"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFD700"
        android:layout_marginTop="5dp"
        android:shadowColor="#000000"
        android:shadowRadius="4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/currentPlayerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Player: White"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        android:padding="6dp"
        android:background="#4A3728"
        android:shadowColor="#000000"
        android:shadowRadius="2"
        app:layout_constraintTop_toBottomOf="@id/chessTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/gameStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:shadowColor="#000000"
        android:shadowRadius="3"
        app:layout_constraintTop_toBottomOf="@id/currentPlayerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#884513"
        app:layout_constraintTop_toBottomOf="@id/gameStatusText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <GridLayout
        android:id="@+id/chessBoard"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_margin="12dp"
        android:columnCount="8"
        android:rowCount="8"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@id/resetButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/floatingPiece"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>