<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chess_pattern_bg_blue"
    android:padding="8dp"
    tools:context=".ChessActivity">

    <!-- Background decorative elements -->
    <ImageView
        android:id="@+id/bgPattern"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.05"
        android:src="@drawable/chess_pattern_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ===== PLAYER 2 (TOP) - ELEGANT DESIGN ===== -->
    <androidx.cardview.widget.CardView
        android:id="@+id/player2Card"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="4dp"
        app:cardBackgroundColor="#1A1A24"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <!-- Player Indicator -->
            <View
                android:id="@+id/player2Indicator"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="12dp"
                android:background="@drawable/gradient_blue" />

            <!-- Player Info -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/player2Indicator"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/player2Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OPPONENT"
                    android:textColor="#B0B0C0"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="♟ Black"
                    android:textColor="#2196F3"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Clock -->
            <TextView
                android:id="@+id/player2Clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/clock_background_blue"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="05:00"
                android:textColor="#0F0E17"
                android:textSize="20sp"
                android:textStyle="bold"
                android:elevation="4dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- ===== CHESS BOARD (ELEGANT) ===== -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/player2Card"
        app:layout_constraintBottom_toTopOf="@id/player1Card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1">

        <!-- Board Shadow -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/board_shadow"
            android:layout_margin="4dp" />

        <!-- Board Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#2A2530">

            <GridLayout
                android:id="@+id/chessBoard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2A2530"
                android:columnCount="8"
                android:rowCount="8"
                android:padding="2dp" />
        </androidx.cardview.widget.CardView>

        <!-- Board Border -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/board_border_blue"
            android:padding="2dp" />
    </FrameLayout>

    <!-- ===== PLAYER 1 (BOTTOM) ===== -->
    <androidx.cardview.widget.CardView
        android:id="@+id/player1Card"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="4dp"
        app:cardBackgroundColor="#1A1A24"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toTopOf="@id/navigationCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <!-- Clock -->
            <TextView
                android:id="@+id/player1Clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/clock_background_blue"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="05:00"
                android:textColor="#0F0E17"
                android:textSize="20sp"
                android:textStyle="bold"
                android:elevation="4dp" />

            <!-- Player Info -->

            <!-- Player Indicator -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="27dp"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/player1Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.1"
                    android:text="YOU"
                    android:textColor="#B0B0C0"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="♙ White"
                    android:textColor="#2196F3"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:id="@+id/player1Indicator"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@drawable/gradient_blue" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- ===== NAVIGATION CONTROLS ===== -->
    <androidx.cardview.widget.CardView
        android:id="@+id/navigationCard"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="4dp"
        app:cardBackgroundColor="#1A1A24"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/moveHistoryCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="⏪ Back"
                android:textColor="#2196F3"
                app:strokeColor="#2196F3"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_back"
                app:iconTint="@color/blue" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/forwardButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Forward ⏩"
                android:textColor="#2196F3"
                app:strokeColor="#2196F3"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_forward"
                app:iconTint="@color/blue" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ===== MOVE HISTORY ===== -->
    <androidx.cardview.widget.CardView
        android:id="@+id/moveHistoryCard"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#1A1A24"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MOVE HISTORY"
                android:textColor="#2196F3"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:paddingBottom="4dp" />

            <!-- Moves Container -->
            <HorizontalScrollView
                android:id="@+id/moveHistoryScroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/moveHistoryContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical" />
            </HorizontalScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Game Over Fragment Container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Floating piece with shadow -->
    <ImageView
        android:id="@+id/floatingPiece"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>